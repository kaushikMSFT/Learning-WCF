                    </security>
                </binding>
            </basicHttpBinding>
        </bindings>
        <client>
            <endpoint address="https://localhost/BasicHttpBinding_Secure_WebHost/Service.svc"
                binding="basicHttpBinding" bindingConfiguration="basicHttp"
                contract="LoginClient.localhost.IHelloIndigoService" name="basicHttp" />
        </client>
    </system.serviceModel>
</configuration>