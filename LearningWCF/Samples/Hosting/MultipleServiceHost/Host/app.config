<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="serviceBehavior">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
			<service name="BusinessServices.ServiceA" behaviorConfiguration="serviceBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8000"/>
          </baseAddresses>
        </host>
        <endpoint address="ServiceA" contract="BusinessServices.IServiceA" binding="basicHttpBinding"  />
        <endpoint contract="IMetadataExchange" binding="mexHttpBinding" address="mex" />
      </service>
      <service name="BusinessServices.ServiceB" behaviorConfiguration="serviceBehavior" >
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8001"/>
          </baseAddresses>
        </host>
        <endpoint address="ServiceB" contract="BusinessServices.IServiceB" binding="basicHttpBinding"  />
        <endpoint contract="IMetadataExchange" binding="mexHttpBinding" address="mex" />
      </service>
    </services>
	</system.serviceModel>
</configuration>