<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<system.serviceModel>
		<services>
			<service name="Sessions.SessionService" behaviorConfiguration="serviceBehavior">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:9000"/>
						<add baseAddress="http://localhost:8000"/>
					</baseAddresses>
				</host>
				<endpoint address="SessionService" binding="netTcpBinding" contract="Sessions.ISessionService"   bindingConfiguration="netTcp"/>
				<endpoint contract="IMetadataExchange" binding="mexHttpBinding" address="mex" />
			</service>
		</services>
    <bindings>
      <netTcpBinding>
        <binding name="netTcp" receiveTimeout="00:00:10" />
      </netTcpBinding>
    </bindings>
		<behaviors>
			<serviceBehaviors>
				<behavior name="serviceBehavior">
					<serviceMetadata httpGetEnabled="true"/>
				</behavior>
			</serviceBehaviors>
		</behaviors>
	</system.serviceModel>
</configuration>